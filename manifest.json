{
  "name": "Fetch Review",
  "manifest_version": 2,
  "version": "0.2",
  "devtools_page": "devtools.html",
  "description": "Log all review from Taobao and Tmall!",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },
  "icons": {
    "48": "images/icon48.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "declarativeContent"
  ],
  "page_action": {
    "default_title": "获取十页评论数据"
  }
}